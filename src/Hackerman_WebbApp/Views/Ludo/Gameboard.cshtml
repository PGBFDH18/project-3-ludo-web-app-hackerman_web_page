@model Hackerman_WebbApp.Models.GameModel
@{
    ViewData["Title"] = "Gameboard";
}

<div class="gameInfo">

    <div class="currentPlayer">@Model.Player.Name</div>
    <div class="dice">
        <div class="diceDot" id="center"></div>
        <div class="diceDot" id="leftUpper"></div>
        <div class="diceDot" id="leftMiddle"></div>
        <div class="diceDot" id="leftLower"></div>
        <div class="diceDot" id="rightUpper"></div>
        <div class="diceDot" id="rightMiddle"></div>
        <div class="diceDot" id="rightLower"></div>
    </div>
    <div>
        @*<input id="dicevalue" type="text" placeholder="number" />*@
        <form action="rolldice" method="get">
            @*<a class="button" href="#" onclick="DiceThrow(@Model.DiceThrow);">Click to update dice</a>*@
            <input type="submit" class="button" value="Roll Dice" />

        </form>
    </div>
    <div>
        <form action="movepiece" method="get">
            <input asp-for="MovePiece.PlayerId" type="hidden" />
            <select asp-for="MovePiece.PieceId" id="playercolor">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <input id="movePiece" type="submit" class="button" value="Move Piece" />
        </form>
    </div>
</div>


<div class="board">
    <div class="wing" id="leftWing">
        @for (int i = 7; i <= 18; i++)
        {
            if (i == 13)
            {
                <div class="field player2" id="tile13"></div>
                for (int j = 1; j <= 5; j++)
                {
                    <div class="field player2" id="g @j"></div>

                }
            }                                 
            <div class="field" id="tile @i"></div>            
        }
               
    </div>
    <div class="wing" id="topWing">

        @for (int i = 20; i <= 31; i++)
        {
            if (i == 26)
            {
                <div class="field player4" id="tile26"></div>
                for (int j = 1; j <= 5; j++)
                {
                    <div class="field player4" id="b @j"></div>
                }
            }

            <div class="field" id="tile @i"></div>
        }

    </div>
    <div class="wing" id="rightWing">

        @for (int i = 33; i <= 44; i++)
        {
            if (i == 39)
            {
                <div class="field player3" id="tile @i"></div>
                for (int j = 1; j <= 5; j++)
                {
                    <div class="field player3" id="gu @j"></div>
                }
            }

            <div class="field" id="tile @i"></div>
            
        }
                          
    </div>
    <div class="wing" id="bottomWing">


        @for (int i = 46; i <= 52; i++)
        {
            if (i == 52)
            {
                <div class="field player1" id="tile @i"></div>
                for (int j = 1; j <= 5; j++)
                {
                    <div class="field player1" id="r @j"></div>

                }

            }

            <div class="field" id="tile @i"></div>


        }
        @for (int i = 1; i <= 5; i++)
        {


            <div class="field" id="tile @i"></div>


        }
     
    </div>

    <div class="goal"></div>
    <div class="start player1">

        <div class="field">
            <div class="brick player1" id="piece1"></div>
        </div>
        <div class="field">
            <div class="brick player1" id="piece2"></div>
        </div>
        <div class="field">
            <div class="brick player1" id="piece3"></div>
        </div>
        <div class="field">
            <div class="brick player1" id="piece4"></div>
        </div>
    </div>

    <div class="start player2">
        <div class="field" id="p2piece1" onclick="MovePiece()">
            <div class="brick player2" id="piece1"></div>
        </div>
        <div class="field">
            <div class="brick player2" id="piece2"></div>
        </div>
        <div class="field">
            <div class="brick player2" id="piece3"></div>
        </div>
        <div class="field">
            <div class="brick player2" id="piece4"></div>
        </div>
    </div>
    <div class="start player3">
        <div class="field">
            <div class="brick player3" id="piece1"></div>
        </div>
        <div class="field">
            <div class="brick player3" id="piece2"></div>
        </div>
        <div class="field">
            <div class="brick player3" id="piece3"></div>
        </div>
        <div class="field">
            <div class="brick player3" id="piece4"></div>
        </div>
    </div>
    <div class="start player4">
        <div class="field">
            <div class="brick player4" id="piece1"></div>
        </div>
        <div class="field">
            <div class="brick player4" id="piece2"></div>
        </div>
        <div class="field">
            <div class="brick player4" id="piece3"></div>
        </div>
        <div class="field">
            <div class="brick player4" id="piece4"></div>
        </div>
    </div>
</div>
<script>window.onload=DiceThrow(@Model.DiceThrow)</script>
